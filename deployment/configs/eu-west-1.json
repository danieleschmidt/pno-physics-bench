{
  "environment": "production",
  "region": "eu-west-1",
  "name": "Europe (Ireland)",
  "availability_zones": ["eu-west-1a", "eu-west-1b", "eu-west-1c"],
  "replicas": 5,
  "resources": {
    "cpu_request": "500m",
    "cpu_limit": "2000m", 
    "memory_request": "1Gi",
    "memory_limit": "4Gi",
    "storage": "100Gi",
    "storage_class": "gp3"
  },
  "networking": {
    "load_balancer_type": "application",
    "cdn_enabled": true,
    "cdn_provider": "cloudflare",
    "ssl_termination": "load_balancer"
  },
  "monitoring": {
    "prometheus_enabled": true,
    "grafana_enabled": true,
    "alertmanager_enabled": true,
    "log_aggregation": "enabled",
    "tracing": "jaeger",
    "metrics_retention": "90d",
    "logs_retention": "2555d"
  },
  "security": {
    "pod_security_policy": true,
    "network_policies": true,
    "rbac": true,
    "image_scanning": true,
    "vulnerability_scanning": true,
    "encryption_at_rest": true,
    "encryption_in_transit": true
  },
  "compliance": {
    "gdpr": true,
    "ccpa": false,
    "pdpa": false,
    "iso27001": true,
    "audit_logging": true,
    "data_residency": "eu",
    "privacy_by_design": true,
    "right_to_be_forgotten": true
  },
  "scaling": {
    "hpa_enabled": true,
    "min_replicas": 3,
    "max_replicas": 25,
    "target_cpu_utilization": 70,
    "target_memory_utilization": 80
  },
  "backup": {
    "enabled": true,
    "schedule": "0 1 * * *",
    "retention": "2555d",
    "cross_region_replication": false,
    "encryption": true
  },
  "disaster_recovery": {
    "rpo": "30m",
    "rto": "2h", 
    "backup_regions": ["eu-central-1", "eu-north-1"],
    "automated_failover": true
  },
  "localization": {
    "primary_language": "en",
    "supported_languages": ["en", "de", "fr", "es"],
    "timezone": "Europe/Dublin",
    "currency": "EUR"
  }
}